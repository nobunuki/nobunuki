<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".airflow">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txttittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air Quality"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/dashboard"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@+id/txttittle"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerInParent="true"
        tools:progress="" />


        <TextView
            android:id="@+id/text_view_progressair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_centerInParent="true"
            android:textAppearance="@style/dashboard"
            tools:text="" />

        <TextView
            android:id="@+id/text_view_infoair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/dashboard"
            android:layout_below="@id/text_view_progressair"
            android:layout_centerInParent="true"
            tools:text=""
            />
        <TextView
            android:id="@+id/temperatureair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_infoair"
            android:text="Temperature"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/dashboard"
            />

        <TextView
            android:id="@+id/txttemperatureair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperatureair"
            android:layout_centerInParent="true"
            android:textAppearance="@style/dashboard"
            tools:text="" />
        <TextView
            android:id="@+id/historyair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttemperatureair"
            android:text="History"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/dashboard"
            />
    </RelativeLayout>

</ScrollView>