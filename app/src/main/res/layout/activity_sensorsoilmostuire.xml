<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sensorsoilmostuire">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txttittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soil Moisture"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/dashboard"
        />
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_below="@+id/txttittle"
        style="@style/CircularDeterminateProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:progress="" />


    <TextView
        android:id="@+id/text_view_progresssoil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/progress_bar"
        android:layout_below="@id/txttittle"
        android:layout_marginTop="60sp"
        android:layout_marginStart="40sp"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:text="" />

        <TextView
            android:id="@+id/text_view_infosoil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_progresssoil"
            android:layout_toEndOf="@id/progress_bar"
            android:layout_marginTop="20sp"
            android:layout_marginStart="40sp"
            android:textSize="40sp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            tools:text="" />
        <TextView
            android:id="@+id/temperaturesoil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_marginStart="20sp"
            android:text="Temperature"
            android:textAppearance="@style/dashboard"
            />
        <TextView
            android:id="@+id/txttemperaturesoil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperaturesoil"
            android:layout_marginStart="40sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:textSize="35sp"
            tools:text=""
            />
        <TextView
            android:id="@+id/historysoil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttemperaturesoil"
            android:text="History"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15sp"
            android:textAppearance="@style/dashboard"
            />
    </RelativeLayout>


</ScrollView>